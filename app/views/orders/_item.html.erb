<% if product = Product.find_by(id: product_id) %>

<div class="row">
  <div >
    <div class="thumbnail order-detail">
       <%= image_tag product.image.url %>
      <div class="caption">
        <h3><%= product.name %></h3>
        <p><%= humanized_money_with_symbol line_total %></p>
      </div>
    </div>
  </div>
</div>
<% end %>